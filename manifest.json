{
    "manifest_version": 3,
    "name": "Scoreboard",
    "version": "1.0",
    "description": "Always know the score!",
    "permissions": [
      "storage",
      "webRequest",
      "notifications"
    ],
    "host_permissions": [
      "http://statsapi.mlb.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "options_ui": {
      "page": "options.html",
      "open_in_tab": true
    },
    "icons": {
      "225": "scoreboard-logo.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }