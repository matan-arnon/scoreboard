{
    "manifest_version": 3,
    "name": "Phillies Score Tracker",
    "version": "1.0",
    "description": "Follow the Phils while browsing",
    "permissions": [
      "activeTab",
      "webRequest"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "icons": {
      "225": "phillies.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }