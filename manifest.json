{
    "manifest_version": 3,
    "name": "Scoreboard",
    "version": "1.0",
    "description": "Always know the score!",
    "permissions": [
      "activeTab",
      "webRequest"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "icons": {
      "225": "scoreboard-logo.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }