{
    "manifest_version": 3,
    "name": "Scoreboard",
    "version": "1.0",
    "description": "Always know the score!",
    "permissions": [
      "storage",
      "webRequest",
      "notifications"
    ],
    "host_permissions": [
      "http://statsapi.mlb.com/*"
    ],
    "action": {
      "default_popup": "src/pages/popup.html"
    },
    "options_ui": {
      "page": "src/pages/options.html",
      "open_in_tab": true
    },
    "icons": {
      "225": "src/icons/scoreboard-logo.png"
    }
  }